{
  "name": "jwt-auth-query",
  "type": "module",
  "description": "An exercise to practice how to apply authentication",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "run-p dev:server dev:client",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite",
    "knex": "knex --knexfile server/db/knexfile.js",
    "db-reset": "run-s db:*",
    "db:delete": "rm server/db/dev.sqlite3",
    "db:migrate": "npm run knex migrate:latest",
    "db:seed": "npm run knex seed:run",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "esbuild --packages=external --platform=node --format=esm --outfile=dist/server.js --bundle server/index.ts",
    "test": "vitest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-jwt": "^7.7.5",
    "express-jwt-authz": "^2.4.1",
    "jwks-rsa": "^2.1.5",
    "knex": "^2.5.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@auth0/auth0-react": "^1.12.0",
    "@devacademy/eslint-config": "^1.9.1",
    "@tanstack/react-query": "^4.29.12",
    "@tanstack/react-query-devtools": "^4.29.12",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/express": "^4.17.14",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.1.26",
    "@types/supertest": "^2.0.12",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-c8": "^0.31.0",
    "babel-plugin-styled-components": "^1.12.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.1",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2",
    "regenerator-runtime": "^0.13.7",
    "styled-components": "^5.3.1",
    "superagent": "7.1.1",
    "supertest": "^6.2.2",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": "> 2%, not dead"
}